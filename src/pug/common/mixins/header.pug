include _burg
include _nav

mixin header(navContent, navClass='', headerClass='')
    -var navClasses = "header__nav " + navClass
    -var headerClasses = "header " + headerClass
    header(class=headerClasses)
        .blur
        .header__content.container
            .header__content-row
                .header__form-input-wrapper
                    .header__form-input-exit
                    input.header__form-input(type="text" name="search" form="headerform" )
                .header__item-left
                    +nav('nav', navContent,'headNav')(class=navClasses)
                    
                a.logo.header__logo(href="index.html")
                    img.logo__image-main(src="img/logo/logo.svg" alt="logo" width="216" height="52")
                .header__item-right
                    form#headerform.header__form(action="#")
                        button.search
                            span Поиск
                    .account-buttons
                        button.account-btn Вход
                        span.slash /
                        button.account-btn Регистрация
                    .header__buttons
                        button.header__btn
